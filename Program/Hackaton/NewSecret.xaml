<Window x:Class="Hackaton.NewSecret"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackaton"
        mc:Ignorable="d"
        Title="NewSecret" Height="450" Width="800">
    <Window.Resources>
      
        
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
        
        
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <TextBlock Text="Создание секрета" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Название:" Margin="0,0,0,15"/>
                        <TextBlock Text="Логин:" Margin="0,0,0,15"/>
                        <TextBlock Text="Пароль:" Margin="0,0,0,15"/>
                        <TextBlock Text="Хост:" Margin="0,0,0,15"/>
                       
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBox Name="txtFullName" 
                                Margin="0,5,0,10"
                                Text="{Binding Name}"/>
                        <TextBox Name="txtLogin" 
                                Margin="0,0,0,10"
                                Text="{Binding LoginEncrypted}"/>
                        <TextBox Name="txtPassword" 
                                Margin="0,0,0,10"
                                Text="{Binding PasswordEncrypted}"/>
                        <TextBox Name="txtHost" 
                                Margin="0,0,0,10"
                                Text="{Binding Host}"/>
                    </StackPanel>
                </Grid>
                
                <TextBlock Text="Содержание:" Margin="0,10,0,5"/>
                <TextBox Name="txtDescription" 
                        Height="80" 
                        TextWrapping="Wrap" 
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Text="{Binding Description}"/>
            </StackPanel>
        </ScrollViewer>
        
        <Separator Grid.Row="2" Background="#CCCCCC" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать" 
                    Background="#27AE60" 
                    Foreground="White" 
                    FontWeight="Bold"
                    Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
