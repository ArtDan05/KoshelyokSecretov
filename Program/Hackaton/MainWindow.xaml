<Window x:Class="Hackaton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackaton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFE8E8E8">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Логин:" FontWeight="Bold"/>
            <TextBox Name="LoginBox" Height="35" Margin="0,0,0,10" 
             Padding="5" Background="White" BorderBrush="#FF7A7A7A"/>

            <Label Content="Пароль:" FontWeight="Bold"/>
            <PasswordBox Name="PasswordBox" Height="35" Margin="0,0,0,20"
                Padding="5" Background="White" BorderBrush="#FF7A7A7A"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Вход" Width="100" Height="30" Margin="0,0,10,0" 
                Background="#FF0078D7" Foreground="White" Click="Login_Click"/>
                <Button Content="Регистрация" Width="100" Height="30"
                Background="#FFE1E1E1" Click="Register_Click"/>
            </StackPanel>

            <TextBlock Name="StatusText" Margin="0,20,0,0" TextWrapping="Wrap"
              Foreground="Red" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
